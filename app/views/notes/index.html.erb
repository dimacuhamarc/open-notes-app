  <div class=" flex flex-row w-full justify-between align-center mb-12">
    <h1 class="text-4xl text-purple-700 font-bold"><i class="ri-quill-pen-fill"></i>My Notes</h1>
    <div class="flex flex-row gap-2">
      <%= link_to " New Note <i class='ri-add-fill'></i>".html_safe, new_note_path, class: 'inline-flex gap-2 mb-auto mt-auto button px-3 py-1 bg-purple-700 text-slate-100 rounded-lg' %>
